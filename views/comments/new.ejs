<%- include("../partials/header") %>

<div class="row col-md-8 col-lg-6 text-center editPage bg-light rounded-lg m-auto">
	<div class="col-12 m-auto">
		<h2>Add New Comment to </br> "<%= campground.name %>" Campground</h2>
	</div>
		<div class="col-12 m-auto">
			<form class="form-setup" action="/campgrounds/<%= campground._id %>/comments" method="POST">
				<label for="addComment" class="form-group"></label>
					<textarea id="addComment" class="form-control" type="text" name="comment[text]" rows="5" placeholder="Add comment here"></textarea>
				<button class="btn btn-lg btn-primary btn-block mt-3" type="submit">Submit</button>
			</form>
			<a href="/campgrounds">Go back to Campgrounds</a>
		</div>
	</div> <!-- Closing for form row container-->

<%- include("../partials/footer") %>